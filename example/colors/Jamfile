import sequence ;
import testing ;

rule echo_colors ( foreground_colors + : background_colors + )
{
    for local f in $(foreground_colors)
    {
        for local b in $(background_colors)
        {
            if $(f) != $(b)
            {
                ECHO "ECHO message : $(f) : $(b) " ; # : $(f) : $(b) ;
            }
        }
    }
}

foreground = black red green yellow blue magenta cyan white ;
background = [ sequence.reverse $(foreground) ] ;

echo_colors $(foreground) : $(background) ;

